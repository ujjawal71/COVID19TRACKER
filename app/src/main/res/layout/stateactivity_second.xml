<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StatesecondActivity"
    android:background="@color/colorBackMiddle"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="fill_parent"
        android:background="#06213F"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">





            <ImageView
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:background="#D3D3D3"

                app:srcCompat="@drawable/search" />



            <EditText
                android:layout_width="fill_parent"
                android:id="@+id/textSearchBox"
                android:background="#D3D3D3"
                android:textSize="18dp"
                android:maxLines="1"
                android:padding="3dp"

                android:hint="Search State (Developed By Ujjawal)"
                android:inputType="text"
                android:imeOptions="actionDone"

                android:textColor="#000000"
                android:layout_height="40dp" />
        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#000000"
                android:orientation="horizontal"
                android:weightSum="7.8">

                <TextView
                    android:id="@+id/colCountryNameHEAD"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/back_table_cell"
                    android:paddingLeft="4dp"
                    android:paddingTop="2dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2dp"
                    android:text="All State"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/colCasesHEAD"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.2"
                    android:background="@drawable/back_table_cell"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="All Cases"
                    android:textAlignment="center"
                    android:textColor="#ffaf1a"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:id="@+id/colNewCasesHEAD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.2"
                    android:background="@drawable/back_table_cell"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="Active Cases"
                    android:textAlignment="center"

                    android:textColor="#ff2994"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/colRecoveredHEAD"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.2"
                    android:background="@drawable/back_table_cell"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="Cured"
                    android:textAlignment="center"
                    android:textColor="#00ff00"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/colDeathsHEAD"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.2"
                    android:background="@drawable/back_table_cell"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="All Death"
                    android:textAlignment="center"
                    android:textColor="#ff4d4d"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/wood"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp">

                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>



            </RelativeLayout>

        </LinearLayout>


</RelativeLayout>
